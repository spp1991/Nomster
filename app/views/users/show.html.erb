<div class="booyah-box offset-1 col-10">
  <div class="row ">
    <div class="col-3 text-right ">
      <%= image_tag "user.png" %>
    </div>
    <div class="col-7 user">
      <h1><%= @user.email %></h1>
      <h3>Member Since : <%=  @user.created_at.strftime(" %B %d, %Y") %></h3>
      <h4><%= @user.comments.count %> total comments</h4>
      <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
    </div>
  </div>
  <div class="clear"></div>
  
</div>

<% if @user.comments.present? %>
  <h2 class="text-center">My Comments</h2>
  <div class="row">
    <% @user.comments.each do |comment|  %>
      <div class="col-12 col-sm-6">
        <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
        <blockquote>

          <% if comment.humanized_rating.present? %>
            <b><%= comment.humanized_rating %></b> -
          <% end %>
          <%= comment.message %>
          <small><%= comment.user.email %></small> 
        </blockquote>
      </div>

    <% end %>
</div>
<% end %>

<div class="clear"></div>
<br />
<h2 class="text-center">My Places </h2>
<br />
<% @user.places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1> <%= link_to place.name, place_path(place) %></h1>
    <i> <%= place.address %></i><br /><br />
    <p> <%= place.description %></p>

    <% if place.comments.present? %>
      <div class="col-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
             <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>
      
  </div>
<% end %>